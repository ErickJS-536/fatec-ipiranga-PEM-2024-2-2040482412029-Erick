#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void ExibirPilha(int quatmax, int pilha[]) {
    printf("Pilha:  ");
    for (int i = 0; i < quatmax; i++) {
        if (i < quatmax - 1) {
            printf("| %i ", pilha[i]);
        } else {
            printf("| %i |\n", pilha[i]);
        }
    }
}

void BubbleSort(int quatmax, int pilha[]) {
    int trocado;
    int troca = 0;
    int ciclo = 0;
    int i;
    clock_t start, end;
    double cpu_time_used;
    start = clock();
    
    do {
        trocado = 0;
        // Reduzimos o limite da varredura a cada ciclo
        for (i = 0; i < quatmax - 1 - ciclo; i++) {
            if (pilha[i] > pilha[i + 1]) {
                // Troca os elementos
                int temp = pilha[i];
                pilha[i] = pilha[i + 1];
                pilha[i + 1] = temp;
                trocado = 1; // Marca que houve uma troca
                troca++;
            }
        }
        ciclo++;
    } while (trocado);
    
    end = clock();
    cpu_time_used = ((double) (end - start)) / CLOCKS_PER_SEC;
    printf("Tempo de execução: %f segundos\n", cpu_time_used);
    printf("Quantidade de trocas: %i \n", troca);
    printf("Quantidade de ciclos: %i \n", ciclo);
}

int main() {
    int quatmax = 60;
    int pilha[] = {5, 3, 8, 4, 2, 115, 
               113, 118, 114, 112,
               125, 123, 128, 124, 122,
               35, 33, 38, 34, 32,
               45, 43, 48, 44, 42,
               55, 53, 58, 54, 52,
               65, 63, 68, 64, 62,
               75, 73, 78, 74, 72,
               85, 83, 88, 84, 82,
               95, 93, 98, 94, 92,
               15, 13, 18, 14, 12,
               25, 23, 28, 24, 22};

    printf("\nOrdem original da pilha\n");
    ExibirPilha(quatmax, pilha);

    printf("\nExecução do Bubble Sort\n");
    BubbleSort(quatmax, pilha);

    printf("\nPilha reordenada\n");
    ExibirPilha(quatmax, pilha);

    return 0;
}
